#include <iostream>
#include <string>
using namespace std;

int main()
{
	string s1,s2;
	cin>>s1>>s2;
	int n1 = s1.length();
	int n2 = s2.length();
	int cost[n1+1][n2+1];

	for(int i = 0; i <= n1; i++)
		cost[i][0] = i;
	for(int i = 0; i <= n2; i++)
		cost[0][i] = i;

	for(int i = 1; i <= n1; i++)
	{
		for(int j = 1; j <= n2; j++)
		{
			if(s1[i-1] == s2[j-1])
				cost[i][j] = cost[i-1][j-1];
			else
				cost[i][j] = min(cost[i-1][j-1] , min(cost[i-1][j] , cost[i][j-1])) + 1;
		}
	}
	cout<<cost[n1][n2]<<endl;

	return 0;
}
